function getSipKey($uuid,$resID) {
	global $memcache;
	$varArr=split('@',$resID);
	$extension=$varArr[0];
	$sipkey = $memcache->get("recorder:sipkey:$uuid:$extension");
	if ($sipkey) {
		$varArr=split(';',$sipkey);
		$callid = $varArr[0];
		$ret = array();
		$ret['callid']=$callid;
		$ret['sipkey']=$sipkey;
		return $ret;
	} else {
		return false;
	}
}

