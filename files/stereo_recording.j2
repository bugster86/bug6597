function asciiToTxt($data) {
	$txt="";
	while (is_string($data) && strlen($data)>0) {
		$txt = $txt . chr(hexdec(substr($data,0,2)));
		$data = substr($data,2);
		#doLog(chr(hexdec(substr($data,0,2))));	
	}
	return $txt;
}

